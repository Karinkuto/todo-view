<% content_for :title, "Todos" %>

<div class="page-header">
  <h1>Todos</h1>
  <%= link_to "New Todo", new_todo_path, class: "button button-primary" %>
</div>

<div id="todos" class="todos-grid">
  <% @todos.each do |todo| %>
    <%= render todo %>
  <% end %>
</div>

<% if @todos.empty? %>
  <p class="empty-state">No todos yet. Create one!</p>
<% end %>
